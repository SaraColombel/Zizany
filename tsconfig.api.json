{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "build/",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "noImplicitAny": false
  },
  "include": ["src/backend/**/*.ts"]
}
