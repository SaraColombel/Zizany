generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model Users {
    id                   Int           @id @default(autoincrement())
    email                String        @unique
    password             String
    username             String
    thumbnail            String?
    servers              Servers[]
    created_at           DateTime      @default(now())
    updated_at           DateTime      @default(now()) @updatedAt
    memberships          Memberships[]
    messages             Messages[]
    created_invitations  Invitations[] @relation("InvitationsCreatedBy")
    used_invitations     Invitations[] @relation("InvitationsUsedBy")
}

model Servers {
    id          Int           @id @default(autoincrement())
    name        String
    owner_id    Int
    thumbnail   String?
    banner      String?
    is_public   Boolean       @default(false)
    created_at  DateTime      @default(now())
    updated_at  DateTime      @default(now()) @updatedAt
    owner       Users         @relation(fields: [owner_id], references: [id])
    memberships Memberships[]
    channels    Channels[]
    invitations Invitations[]
}

model Roles {
    id          Int           @id @default(autoincrement())
    name        String        @unique
    created_at  DateTime      @default(now())
    updated_at  DateTime      @default(now()) @updatedAt
    memberships Memberships[]
}

model Memberships {
    id         Int      @id @default(autoincrement())
    user_id    Int
    server_id  Int
    role_id    Int
    created_at DateTime @default(now())
    updated_at DateTime @default(now()) @updatedAt
    user       Users    @relation(fields: [user_id], references: [id])
    server     Servers  @relation(fields: [server_id], references: [id])
    role       Roles    @relation(fields: [role_id], references: [id])

    @@unique([user_id, server_id])
}

model Channels {
    id         Int        @id @default(autoincrement())
    server_id  Int
    name       String     @db.VarChar(24)
    created_at DateTime   @default(now())
    updated_at DateTime   @default(now()) @updatedAt
    server     Servers    @relation(fields: [server_id], references: [id])
    messages   Messages[]
}

model Messages {
    id         Int      @id @default(autoincrement())
    channel_id Int
    user_id    Int
    content    String
    created_at DateTime @default(now())
    updated_at DateTime @default(now()) @updatedAt
    channel    Channels @relation(fields: [channel_id], references: [id])
    user       Users    @relation(fields: [user_id], references: [id])
}

model Invitations {
    id                  Int       @id @default(autoincrement())
    server_id           Int
    code                String    @unique
    created_by_user_id  Int
    expires_at          DateTime?
    used_at             DateTime?
    used_by_user_id     Int?
    created_at          DateTime  @default(now())
    server              Servers   @relation(fields: [server_id], references: [id])
    created_by          Users     @relation("InvitationsCreatedBy", fields: [created_by_user_id], references: [id])
    used_by             Users?    @relation("InvitationsUsedBy", fields: [used_by_user_id], references: [id])

    @@index([server_id])
}
